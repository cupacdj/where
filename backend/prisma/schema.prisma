datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  ADMIN
}

enum PlaceType {
  CAFE
  RESTAURANT
  BAR
  CLUB
  OTHER
}

enum PlaceSource {
  MANUAL
  GOOGLE_MAPS
  OTHER
}

enum TagCategory {
  MOOD
  MUSIC
  VIEW
  FOOD
  PRICE
  OTHER
}

enum VisitStatus {
  PLANNED
  COMPLETED
  CANCELLED
}

enum Gender {
  MAN
  WOMAN
}

enum Weekday {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}


model User {
  id           String    @id @default(uuid())
  email        String    @unique
  username     String?   @unique
  fullName     String?
  name         String?
  surname      String?
  gender       Gender?
  passwordHash String

  role         UserRole  @default(USER)

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  visits       Visit[]
  reviews      Review[]
  favorites    Favorite[]
}

model Place {
  id           String        @id @default(uuid())
  name         String
  type         PlaceType     @default(CAFE)
  description  String?

  city         String        @default("Belgrade")
  address      String?

  latitude     Float?
  longitude    Float?

  phone        String?
  website      String?

  priceLevel   Int?
  isActive     Boolean       @default(true)
  source       PlaceSource   @default(MANUAL)

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  tags         PlaceTag[]
  visits       Visit[]
  reviews      Review[]
  favorites    Favorite[]
  images       PlaceImage[]
  stats        PlaceStats?

  workingHours PlaceWorkingHour[]
}

model PlaceWorkingHour {
  id        String   @id @default(uuid())
  placeId   String

  dayOfWeek Weekday
  openTime  String?   // e.g. "08:00"
  closeTime String?   // e.g. "23:30"
  isClosed  Boolean   @default(false)

  place     Place    @relation(fields: [placeId], references: [id], onDelete: Cascade)

  @@unique([placeId, dayOfWeek]) // one row per day per place
  @@index([placeId])
}


model Tag {
  id           String       @id @default(uuid())
  name         String       @unique
  displayName  String?
  category     TagCategory
  description  String?

  createdAt    DateTime     @default(now())

  places       PlaceTag[]
}

model PlaceTag {
  placeId      String
  tagId        String

  place        Place      @relation(fields: [placeId], references: [id], onDelete: Cascade)
  tag          Tag        @relation(fields: [tagId], references: [id], onDelete: Cascade)

  createdAt    DateTime   @default(now())

  @@id([placeId, tagId])
}

model Visit {
  id           String       @id @default(uuid())
  userId       String
  placeId      String

  status       VisitStatus  @default(PLANNED)
  plannedAt    DateTime?
  visitedAt    DateTime?

  createdAt    DateTime     @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  place        Place        @relation(fields: [placeId], references: [id], onDelete: Cascade)
  review       Review?
}

model Favorite {
  userId       String
  placeId      String

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  place        Place    @relation(fields: [placeId], references: [id], onDelete: Cascade)

  createdAt    DateTime @default(now())

  @@id([userId, placeId])
}

model Review {
  id          String    @id @default(uuid())
  userId      String
  placeId     String
  visitId     String?   @unique


  rating      Int
  title       String?
  body        String?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  place       Place     @relation(fields: [placeId], references: [id], onDelete: Cascade)
  visit       Visit?    @relation(fields: [visitId], references: [id], onDelete: SetNull)

  @@unique([userId, placeId])
}

model PlaceImage {
   id        String      @id @default(uuid())
  placeId   String

  url       String                      // where file is accessible
  source    PlaceSource @default(MANUAL) // MANUAL, GOOGLE_MAPS, etc.
  isPrimary Boolean     @default(false)  // for main cover image
  order     Int         @default(0)      // for sorting (gallery order)
  altText   String?                     // optional description

  createdAt DateTime    @default(now())

  place     Place       @relation(fields: [placeId], references: [id], onDelete: Cascade)

  @@index([placeId])
}

model PlaceStats {
  placeId        String    @id

  totalVisits    Int       @default(0)
  totalPlanned   Int       @default(0)
  totalReviews   Int       @default(0)
  avgRating      Float?
  trendingScore  Float?
  lastTrendingAt DateTime?

  place          Place     @relation(fields: [placeId], references: [id], onDelete: Cascade)
}
